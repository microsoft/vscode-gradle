{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "ES2017",
    "outDir": "out",
    "lib": ["ES6", "ES2018.promise", "ES2019.array", "DOM"],
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowJs": true, // to support compiling the generated proto js files
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist"
  },
  "exclude": ["node_modules", ".vscode-test", "build", "beta"],
  "include": ["./src"]
}
