{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6", "es2018.promise", "es2019.array"],
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "noUnusedLocals": true,
    "allowJs": true, // to support compiling the generated proto js files
    "declaration": true
  },
  "exclude": ["node_modules", ".vscode-test", "build", "beta"],
  "include": ["./src/**/*"]
}
